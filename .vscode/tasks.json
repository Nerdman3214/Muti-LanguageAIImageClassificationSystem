}{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build C++ Project (CMake)",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/build_cpp.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Build C++ InferenceEngine using CMake (production-grade)"
        },
        {
            "type": "shell",
            "label": "Build C++ Project (Direct g++)",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "-I${workspaceFolder}/cpp/include",
                "${workspaceFolder}/cpp/src/main.cpp",
                "${workspaceFolder}/cpp/src/InferenceEngine.cpp",
                "${workspaceFolder}/cpp/src/Softmax.cpp",
                "${workspaceFolder}/cpp/src/ImageUtils.cpp",
                "-o",
                "${workspaceFolder}/cpp/build/InferenceEngine"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Build C++ with g++ directly (all source files)"
        },
        {
            "type": "shell",
            "label": "Clean Build",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/cpp/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Clean the build directory"
        },
        {
            "type": "shell",
            "label": "Build Java Project",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/build_java.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "build",
            "detail": "Build Java REST API with Maven"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}